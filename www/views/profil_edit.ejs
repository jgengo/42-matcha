<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include("partials/_head") %>
    <link rel="stylesheet" type="text/css" href="/assets/css/profil/main.css" />
  </head>

  <body>
    <%- include("partials/_navbar") %>
    <div class='ui container segment' id='ft_main'>
      <h3 class="ui icon violet"><i class=" bordered violet inverted user icon"></i> Edit information</h3>
      <div class='ui divider'></div>
      <div class="ui stackable three column grid">
        
        <div class="column">
          <form action="/register/step" method="post" class="ui form">
            <div class="field">
              <label>First name</label>
              <input type="text" name="firstName" placeholder="Jordane" value='<%- user.first_name %>'>
            </div>
            <div class="field">
              <label>Last name</label>
              <input type="text" name="lastName" placeholder="Gengo" value='<%- user.last_name %>'>
            </div>
            
          </form>
        </div>
        <div class="column">
          <form action="/register/step" method="post" class="ui form">
            <div class="field">
              <label>Gender</label>
              <div class="inline fields go_centered">
                <div class="field">
                  <i class="violet inverted big circular male icon" id="g_male"></i>
                </div>
                <div class="field">
                  <i class="grey big circular female icon" id="g_female"></i>
                </div>
              </div>
            </div>
            <div class="field">
              <label>Birthdate</label>
              <input data-toggle="datepicker" name="birthdate" placeholder="Click here to enter your birthdate">
            </div>
            <div class="field">
              <label>Location</label>
              <input type="text" name="location" placeholder="Paris" value="<%- user.location %>" />
              <div class="ui checkbox" style="padding-top: 5px">
                <input type="checkbox" name="hide_location" value='<%- user.hide_location %>' />
                <label>Hide from others</label>
              </div>
            </div>
            <div class="field" style="padding-top: 15px">
              <label>Interested by</label>
              <div class="inline fields go_centered">
                <div class="field">
                  <i class="grey big circular male icon toggle button" id="o_male"></i>
                </div>
                <div class="field">
                  <i class="grey big circular female icon" id="o_female"></i>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="column">
          <form action="/register/step" method="post" class="ui form">
            <div class="field">
              <label id='mi'>Main interests</label>
              <input type="text" name="tags" value="<%- tags %>" data-role="tagsinput" id='tags' />
            </div>
            <div class="field">
              <label>About you</label>
              <textarea name='bio' id='bio'><%- user.bio %></textarea>
            </div>
          </div>
        </div>
        <div class='ui divider'></div>
        <div class="ui centered grid">
          <div class='six wide tablet eight wide column' id='update_confirm'>
            <a href="" class="ui violet button">update</a>
          </div>
        </div>
      </div>
      <%- include("partials/_footer") %>
